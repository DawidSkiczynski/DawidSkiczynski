    <script>
        function f(){
            let h=document.getElementById("h").value;
            document.getElementById("td1").style.backgroundColor="HSL("+h+",100%,50%)";
            document.getElementById("td2").style.backgroundColor="HSL("+h+",80%,50%)";
            document.getElementById("td3").style.backgroundColor="HSL("+h+",60%,50%)";
            document.getElementById("td4").style.backgroundColor="HSL("+h+",40%,50%)";
            document.getElementById("td5").style.backgroundColor="HSL("+h+",20%,50%)";
        }
